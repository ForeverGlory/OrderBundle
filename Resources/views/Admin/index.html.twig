{% extends "::base.html.twig" %}

{% block title %}订单列表{% endblock %}

{% block body %}
    <div class="box" id="user-list">
        <div class="box-header">
            <h3 class="box-title">列表</h3>
            <div class="box-tools">
            </div>
        </div>
        <div class="box-body">
            <table class="table">
                <tr>
                    <th>ID</th>
                    <th>标题</th>
                    <th>价格</th>
                    <th>状态</th>
                    <th>创建时间</th>
                    <th>操作</th>
                </tr>
                {% for item in pagination %}
                    <tr>
                        <td>{{item.id}}</td>
                        <td>{{item.title}}</td>
                        <td>{{item.amount}}</td>
                        <td>{{item.status}}</td>
                        <td>{{item.createdTime|date('Y-m-d H:i')}}</td>
                        <td>
                            <a href="{{path("glory_order_admin_view",{id:item.id})}}">查看</a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
        <div class="box-footer clearfix">
            <div class="no-margin pull-right">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}
